
# Make implicit variables for compilation
HEADERS   = $(wildcard src/*.h test/*.h)
C_SOURCES = $(wildcard src/*.c test/*.c)
OBJ=${C_SOURCES:.c=.o}


CC_FLAGS= 
CC=cc

LD_FLAGS = 
LD=cc


test: test/main
	./test/main

test/main: $(OBJ)
	$(LD) -o test/main $(OBJ) $(LD_FLAGS)

%.o : %.c ${HEADERS} 
	$(CC) -c $< -o $@ $(CC_FLAGS)


clean:
	rm -fd src/*.o
	rm -fd src/*.bin
	rm -fd test/*.o
	rm -fd test/main


.PHONY: clean